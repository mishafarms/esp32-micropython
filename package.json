    "@types/gulp-debug": "^2.0.31",
    "@types/gulp-gzip": "^0.0.31",
    "@types/gulp-if": "^0.0.33",
    "@types/gulp-uglify": "^3.0.5",
    "@types/node": "^10.1.4",
    "@types/pump": "^1.0.1",
    "@types/shelljs": "^0.8.0",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-debug": "^4.0.0",
    "gulp-gzip": "^1.4.2",
    "gulp-if": "^2.0.2",
    "gulp-uglify": "^3.0.0",
    "pump": "^3.0.0",
    "shelljs": "^0.8.5",
    "ts-node": "^6.0.5",
    "typescript": "^2.9.1"
  },
  "scripts": {
    "mount-sys-osx": "hdiutil attach images/sys.img -mountpoint ./sys-fs",
    "umount-sys-osx": "hdiutil detach ./sys-fs",
    "mount-sys-linux": "sudo mount -o uid=$(id -u),gid=$(id -g) images/sys.img ./sys-fs",
    "umount-sys-linux": "sudo umount ./sys-fs",
    "build-mp": "scripts/build-mp.sh",
    "build-panel": "cd panel && yarn build",
    "bundle": "cp -f panel/default/mainInfo.js panel/web/ && yarn build-panel && gulp",
    "bundle-edu": "cp -f ../edublocks-micropython/web/mainInfo.js panel/web/ && yarn build-panel && gulp",
    "bundle-otto": "cp -f ../OttoDIYPython/web/mainInfo.js panel/web/ && gulp otto",
    "bundle-tempSensor": "cp -f ../tempSensor/web/mainInfo.js panel/web/ && yarn build-panel && gulp tempSensor",
    "bundle-target": "cp -f ../MovingTarget/web/mainInfo.js panel/web/ && yarn build-panel && gulp targetTask --target MovingTarget",
    "flash-erase": "esptool.py --chip esp32 -b 406800 erase_flash",
    "flash-micropython": "yarn flash-partition && esptool.py --chip esp32 -b 406800 write_flash -z 0x10000 images/mp.bin",
    "flash-partition": "esptool.py --chip esp32 -b 115200 write_flash 0x8000 images/partition-table.bin",
    "flash-sys": "scripts/write-sys.sh"
  }
}
