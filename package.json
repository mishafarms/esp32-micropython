    "@types/del": "^3.0.1",
    "@types/gulp": "^4.0.5",
    "@types/gulp-debug": "^2.0.31",
    "@types/gulp-gzip": "^0.0.31",
    "@types/gulp-if": "^0.0.33",
    "@types/gulp-uglify": "^3.0.5",
    "@types/node": "^10.1.4",
    "@types/pump": "^1.0.1",
    "@types/shelljs": "^0.8.0",
    "del": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-debug": "^4.0.0",
    "gulp-gzip": "^1.4.2",
    "gulp-if": "^2.0.2",
    "gulp-uglify": "^3.0.0",
    "pump": "^3.0.0",
    "shelljs": "^0.8.5",
    "ts-node": "^6.0.5",
    "typescript": "^2.9.1"
  },
  "scripts": {
    "build-mp": "scripts/build-mp.sh -m WROVER_16M -v USER",
    "build-mp-4mb": "scripts/build-mp.sh -m ESP32_GENERIC",
    "build-mp-ota_user": "scripts/build-mp.sh -m WROVER_16M -v OTA_USER",
    "build-panel": "cd panel && yarn build",
    "bundle": "yarn build-panel && gulp",
    "bundle-edu": "gulp",
    "bundle-otto": "gulp otto",
    "bundle-tempSensor": "gulp tempSensor",
    "bundle-target": "gulp targetTask --target MovingTarget",
    "create-sys-img": "scripts/create-sys-img.sh",
    "erase": "esptool.py --chip esp32 -b 406800 erase_flash",
    "flash": "scripts/write.sh",
    "flash-app": "scripts/write.sh -s app",
    "flash-bootloader": "scripts/write.sh -s bootloader",
    "flash-micropython": "scripts/write.sh -s booatloader, partition-table, otadata, app",
    "flash-otadata": "scripts/write.sh -s otadata",
    "flash-partition": "scripts/write.sh -s partition-table",
    "flash-sys": "scripts/write.sh -s vfs",
    "flash-merged": "scripts/write-merged.sh",
    "merge": "scripts/build-merge.sh",
    "mount-sys-fat": "sudo mount -o uid=$(id -u),gid=$(id -g) images/sys.img ./sys-fs",
    "mount-sys-lfs": "losetup /dev/loop0 images/sys.img && lfs --block_size=4096 /dev/loop0 ./sys-fs",
    "umount-sys-fat": "sudo umount ./sys-fs",
    "umount-sys-lfs": "umount ./sys-fs && losetup -d /dev/loop0"
  }
}
